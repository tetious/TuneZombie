<div id="app">
  <div id="app-header" class="navbar ui-layout-north">
  <div id="header-container" class="container navbar-inner">
      <div id="logo" class="brand"><img src="assets/logo.png"/></div>
      <div id="player">
        <%= render partial: "music/player" %>
      </div>

      <form id ="search" class="navbar-search pull-right">
        <input type="text" class="search-query" placeholder="Search">
      </form>
      <ul id="username" class="nav pull-right">
        <li class="dropdown">
          <a href="#"
             class="dropdown-toggle"
             data-toggle="dropdown">
            <%= current_user %>
            <b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
            <li><a href="#">Profile</a></li>
            <li><a href="#">Logout</a></li>
            <li class="divider"></li>
            <li><a href="#">About</a></li>
          </ul>
        </li>
      </ul>
    </div>
</div>
  <div id="app-left" class="ui-layout-west">
    <div id="left-accordion">
      <h3>Albums</h3>
        <div>
          <ul id="album-list" class="item-list">
            <%= render @albums %>
          </ul>
        </div>
      <h3>Artists</h3>
        <p>Not implemented.</p>
      <h3>Playlists</h3>
        <p>Not implemented.</p>
    </div>
  </div>

  <div id="app-content" class="ui-layout-center">
    <%= render partial: "albums/album_box", collection: @albums, :as => :album %>
  </div>
</div>
