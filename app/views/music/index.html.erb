<div id="app" class="app-layout"
     data-dojo-type="dijit.layout.BorderContainer"
     data-dojo-props="design: 'headline'">

  <div id="app-header"
       data-dojo-type="dijit.layout.ContentPane"
       data-dojo-props="region: 'top'">
    <div id='search_box'>
      <table class="table">
        <tr>
          <td>
            <select name="search">
              <option>Album</option>
              <option>Artist</option>
              <option>Track</option>
            </select>
          </td>
          <td>
            <input type="text" size="50" id="left_search">
          </td>
          <td>
            <button id="run_search">Search</button>
          </td>
        </tr>
      </table>
    </div>
  </div>

  <div id="app-left"
       data-dojo-type="dijit.layout.ContentPane"
       data-dojo-props="region: 'left', splitter: true">


    <table id="left_item_list">
      <%= render @albums %>
    </table>
  </div>

  <div id="app-content"
       data-dojo-type="dijit.layout.ContentPane"
       data-dojo-props="region: 'center'">
    <table id="track_list">
      <thead>
        <tr>
          <td>#</td>
          <td>Name</td>
          <td>Rating</td>
          <td><span class="tooltip" title="Play Count">PC</span></td>
        </tr>
      </thead>
    </table>
  </div>

  <div id="app-footer"
    data-dojo-type="dijit.layout.ContentPane"
    data-dojo-props="region: 'bottom'">
    <div id="player">
      PLAYER WIDGET GOES HERE
    </div>
  </div>

</div>

